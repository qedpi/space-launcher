{
  "name": "Playspace Launcher",
  "version": "0.0.0.0",
  "manifest_version": 2,

  "description": "I'm awesome!",
  "icons": {
    "128": "app.png"
  },

  "browser_action": {
    "default_title": "Idle tabs must be purged!",
    "default_popup": "index.html"
  },

  "chrome_url_overrides": {
    "newtab": "index.html"
  },

  "permissions": [
    "http://*/*", "https://*/*",
    "tabs",
    "storage"
  ]
}
